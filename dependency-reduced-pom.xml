<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pom-scijava</artifactId>
    <groupId>org.scijava</groupId>
    <version>30.0.0</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>icbm-iupui</groupId>
  <artifactId>vtea</artifactId>
  <name>VTEA master</name>
  <version>1.0.0</version>
  <description>Volumetric analysis</description>
  <developers>
    <developer>
      <id>swin</id>
      <name>Seth Winfree</name>
      <email>winfrees@iupui.edu</email>
      <organization>IUPUI</organization>
      <organizationUrl>www.iupui.edu</organizationUrl>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>-6</timezone>
    </developer>
  </developers>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
      </resource>
      <resource>
        <directory>${project.build.sourceDirectory}</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>${basedir}/src/test/resources</directory>
      </testResource>
      <testResource>
        <directory>${project.build.testSourceDirectory}</directory>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>vtea._vtea</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <showDeprecation>true</showDeprecation>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <executions>
            <execution>
              <goals>
                <goal>jar</goal>
              </goals>
            </execution>
          </executions>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>vtea._vtea</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <id>0</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>vtea</shadedClassifierName>
              <minimizeJar>false</minimizeJar>
              <artifactSet>
                <includes>
                  <include>org.renjin.*</include>
                  <include>org.renjin*</include>
                </includes>
                <excludes />
              </artifactSet>
            </configuration>
          </execution>
          <execution>
            <id>1</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>false</shadedArtifactAttached>
              <shadedClassifierName>imageprocessor</shadedClassifierName>
              <minimizeJar>true</minimizeJar>
              <artifactSet>
                <excludes>
                  <exclude>vtea.*</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>scijava.releases</id>
      <url>https://maven.scijava.org/content/repositories/releases</url>
    </repository>
    <repository>
      <id>scijava.snapshots</id>
      <url>https://maven.scijava.org/content/repositories/snapshots</url>
    </repository>
    <repository>
      <id>scijava.public</id>
      <url>https://maven.scijava.org/content/groups/public</url>
    </repository>
    <repository>
      <id>bedatadriven</id>
      <name>bedatadriven public repo</name>
      <url>https://nexus.bedatadriven.com/content/groups/public/</url>
    </repository>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
    <repository>
      <id>netbeans</id>
      <name>NetBeans</name>
      <url>http://netbeans.apidesign.org/maven2/</url>
    </repository>
  </repositories>
  <properties>
    <maven.javadoc.failOnError>false</maven.javadoc.failOnError>
    <netbeans.hint.license>gpl20</netbeans.hint.license>
    <enforcer.skip>true</enforcer.skip>
  </properties>
</project>
